<% layout('mainLayout') %>
				<div id="banner" class="page-header">
				  <div class="row">
				    <div class="col-lg-6">
				      <h1><%= header.title %><small> <%= header.tagline %></small></h1>
				    </div>
				  </div>
				</div>
				<% var count = 0; %>
				<div class="row">
				  <% locations.forEach(function (location){ %>
				  <% if(count === 1) { %>
				  <div class="col-xs-12 col-sm-4">
				    <p class="lead"><%= sidebar %></p>
				  </div>
				  <% } %>
				  <div class="col-xs-12 col-sm-8">
				    <div class="row list-group">
				      <div class="col-xs-12 list-group-item">
				        <h4><a href="/location"><%= location.name %></a><small>&nbsp;&nbsp;
				        <% for (var i = 1; i <= location.rating; i++) { %>
				        <span class="glyphicon glyphicon-star"></span>
				        <% } %>
				        <% for (var i = location.rating; i < 5; i++) { %>
				        <span class="glyphicon glyphicon-star-empty"></span>
				        <% } %></small>
				        <span class="badge pull-right badge-defualt"><%= location.distance %></span></h4>
				        <p class="address">
				        	<%= location.address %>
				        </p>
				        <p>
					        <% for (var i = 0; i < location.attributes.length; i++) { %>
					        <span class="label label-warning"><%= location.attributes[i] %></span>&nbsp;&nbsp;
					        <% } %>
				        </p>
				      </div>
				    </div>
				  </div>
				  <% count += 1; %>
				  <% }); %>
				</div>